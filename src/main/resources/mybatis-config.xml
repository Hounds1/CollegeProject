<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>

    <typeAliases>
        <typeAlias type="kr.ac.kopo.vo.MemberVO" alias="Member"/>
        <typeAlias type="kr.ac.kopo.vo.BackendBoardVO" alias="BackendBoard"/>
        <typeAlias type="kr.ac.kopo.vo.BackendBoardFileVO" alias="BackendBoardFile"/>
        <typeAlias type="kr.ac.kopo.vo.BackendBoardCommentVO" alias="BackendBoardComment"/>
        <typeAlias type="kr.ac.kopo.vo.FrontendBoardVO" alias="FrontendBoard"/>
        <typeAlias type="kr.ac.kopo.vo.FrontendBoardFileVO" alias="FrontendBoardFile"/>
        <typeAlias type="kr.ac.kopo.vo.FrontendBoardCommentVO" alias="FrontendBoardComment"/>
        <typeAlias type="kr.ac.kopo.vo.QnaVO" alias="Qna"/>


    </typeAliases>

    <mappers>
        <mapper resource="mappers/MemberMapper.xml"/>
        <mapper resource="mappers/BackendBoardMapper.xml"/>
        <mapper resource="mappers/BackendFileMapper.xml"/>
        <mapper resource="mappers/BackendCommentMapper.xml"/>
        <mapper resource="mappers/FrontendBoardMapper.xml"/>
        <mapper resource="mappers/FrontendFileMapper.xml"/>
        <mapper resource="mappers/FrontendCommentMapper.xml"/>
        <mapper resource="mappers/QnaMapper.xml"/>
        <mapper resource="mappers/AdminMapper.xml"/>
    </mappers>


</configuration>